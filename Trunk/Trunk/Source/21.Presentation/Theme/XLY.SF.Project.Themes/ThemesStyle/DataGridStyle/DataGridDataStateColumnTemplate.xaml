<DataTemplate xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:XLY.SF.Project.Themes;assembly=XLY.SF.Project.Themes">
    
    <!--
        表格列模板资源文件，需要将本文件的属性设置为嵌入的资源;
        $PropertyName$为待绑定的列属性，在动态加载时替换
    -->
    
    <DataTemplate.Resources>
        <local:EnumDataStateToImageSourceConverter x:Key="dataStateToImageSourceConverter"/>
    </DataTemplate.Resources>
    
    <!--数据状态模板列-->
    <Image Width="17" Height="17" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" Source="{Binding $PropertyName$, Converter={StaticResource dataStateToImageSourceConverter}}"></Image>

</DataTemplate>