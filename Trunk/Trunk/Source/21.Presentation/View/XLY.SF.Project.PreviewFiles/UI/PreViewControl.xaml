<UserControl x:Class="XLY.SF.Project.PreviewFilesView.UI.PreViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XLY.SF.Project.PreviewFilesView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <!--引用样式-->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/XLY.SF.Project.PreviewFilesView;Component/Theme/SPProTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <TabControl>
        <TabItem Header="{Binding XPath=FilePreviewLanguage/Preview,Source={x:Static local:LanguageHelper.LanguageProvider}}" x:Name="Preview">            
        </TabItem>
        <TabItem Header="{Binding XPath=FilePreviewLanguage/HEX,Source={x:Static local:LanguageHelper.LanguageProvider}}"  x:Name="HexPreview">           
        </TabItem>
    </TabControl>

</UserControl>
