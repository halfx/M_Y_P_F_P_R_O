<UserControl x:Class="XLY.SF.Project.DataDisplayView.View.PoneLayout.WeChat.WeChatLoginPhoneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XLY.SF.Project.DataDisplayView.View.PoneLayout.WeChat"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--标题栏-->
        <Grid Background="Black" Grid.Row="0" VerticalAlignment="Center" Height="40">
            <TextBlock Text="微信" Foreground="White" VerticalAlignment="Center" Margin="10 0 0 0" FontSize="16" FontWeight="Bold"></TextBlock>
        </Grid>

        <StackPanel Orientation="Vertical" Grid.Row="1" VerticalAlignment="Center">
            <Image Source="weixin.png" HorizontalAlignment="Center" Width="64" Height="64"/>
            <ComboBox ItemsSource="{Binding Accounts}" Margin="20" Height="30"></ComboBox>
            <Button Margin="20 0 20 0" Height="30">登录</Button>
        </StackPanel>
    </Grid>
</UserControl>
