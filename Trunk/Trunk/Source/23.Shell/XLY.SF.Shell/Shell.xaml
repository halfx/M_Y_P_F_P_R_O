                                                    <TransformGroup>
                                                        <ScaleTransform/>
                                                        <SkewTransform/>
                                                        <RotateTransform/>
                                                        <TranslateTransform/>
                                                    </TransformGroup>
                                                </TextBlock.RenderTransform>
                                            </TextBlock>

                                            <!--关闭，最小化按钮-->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <StackPanel.Resources>
                                                    <BooleanToVisibilityConverter x:Key="bToV"/>
