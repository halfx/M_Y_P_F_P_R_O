<Window x:Class="FilePreviewTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pre="clr-namespace:XLY.SF.Project.PreviewFiles.UI;assembly=XLY.SF.Project.PreviewFiles"
        Title="MainWindow" Height="350" Width="525"
    DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="277*"/>
            <RowDefinition Height="42*"/>
        </Grid.RowDefinitions>
        <pre:PreViewControl x:Name="previewControl"/>
        <Button Content="《《" HorizontalAlignment="Left" Margin="40,10,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1" Command="{Binding PreviousCommand}"/>
        <Button Content="》》" HorizontalAlignment="Left" Margin="180,10,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1" Command="{Binding NextCommand}"/>
        <Button Content="切换语言" HorizontalAlignment="Left" Margin="406,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="ChangeLanguage_Click"/>

    </Grid>
</Window>
